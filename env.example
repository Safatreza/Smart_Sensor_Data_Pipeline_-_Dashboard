# Smart Sensor Data Dashboard - Environment Variables Template
# Copy this file to .env and edit the values as needed for your environment
# This file contains configuration settings for the ETL pipeline and dashboard

# =============================================================================
# DATA CONFIGURATION
# =============================================================================

# Input data file path (raw sensor data)
DATA_PATH=data/simulated_raw.csv

# Output database path (processed data storage)
DB_PATH=data/processed.db

# Database table name for sensor data
TABLE_NAME=sensor_data

# =============================================================================
# DASHBOARD CONFIGURATION
# =============================================================================

# Flask/FastAPI application settings
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production

# Server configuration
HOST=0.0.0.0
PORT=8000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database connection settings
DATABASE_URL=sqlite:///data/processed.db
DATABASE_TIMEOUT=30

# =============================================================================
# DASHBOARD FEATURES
# =============================================================================

# Enable/disable features
ENABLE_REAL_TIME_UPDATES=True
ENABLE_ANOMALY_DETECTION=True
ENABLE_EMAIL_ALERTS=False

# Dashboard refresh interval (seconds)
DASHBOARD_REFRESH_INTERVAL=30

# =============================================================================
# SENSOR CONFIGURATION
# =============================================================================

# Sensor data processing settings
TEMPERATURE_THRESHOLD_HIGH=80.0
TEMPERATURE_THRESHOLD_LOW=10.0
PRESSURE_THRESHOLD_HIGH=1100.0
PRESSURE_THRESHOLD_LOW=900.0

# Anomaly detection settings
Z_SCORE_THRESHOLD=2.0
ANOMALY_DETECTION_WINDOW=24

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/sensor_dashboard.log

# Enable console logging
CONSOLE_LOGGING=True

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# CORS settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# API rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# =============================================================================
# MONITORING & ALERTS
# =============================================================================

# Health check settings
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=10

# Email notification settings (if enabled)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL_RECIPIENTS=admin@company.com

# =============================================================================
# EXTERNAL API INTEGRATION
# =============================================================================

# External sensor API settings (if applicable)
SENSOR_API_URL=https://api.sensors.com
SENSOR_API_KEY=your-api-key
SENSOR_API_TIMEOUT=30

# =============================================================================
# CACHING & PERFORMANCE
# =============================================================================

# Redis settings (if using caching)
REDIS_URL=redis://localhost:6379
REDIS_DB=0
CACHE_TTL=300

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development mode settings
DEBUG_MODE=True
AUTO_RELOAD=True
SHOW_ERROR_DETAILS=True

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Production environment settings
# Set these appropriately for production deployment
# PRODUCTION_MODE=False
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem 